int pdigital6 = 6; //escopo global

void setup (){ // Configuração
	pinMode(pdigital6,OUTPUT); //pinMode configura o modo: (Saída ou Entrada)
}

void loop (){ // Repetição
	// HIGH -> + 5V
	//LOW -> -5V
	digitalWrite(pdigital6,HIGH); // acende a lampada
	delay(2000); //milisegundos) // espera 2 segundos...
	digitalWrite(pdigital6,LOW); // Apaga a lampada
	delay(2000); // espera 2 segundos...
}
